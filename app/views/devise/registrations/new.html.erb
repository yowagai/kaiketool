<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :アドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <%# <em>(<%= @minimum_password_length characters minimum)</em> %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :お子さんのなまえ %><br />
    <%= f.email_field :child_name, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :ふりがな %><br />
    <%= f.email_field :child_name_kana, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :お父さん・お母さんのなまえ %><br />
    <%= f.email_field :parent_name, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :ふりがな %><br />
    <%= f.email_field :parent_name_kana, autofocus: true, autocomplete: "" %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"user-sex"}) %>
  </div>

  <div class="field">
    <%= f.label :誕生日 %><br />
    <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

  <div class="actions">
    <%= f.submit "とうろく" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
